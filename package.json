{
  "name": "sim-card-website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:sass": "node-sass sass/main.css css/style.css -w",
    "live-server": "live-server",
    "dev-server": "npm-run-all --parallel live-server dev:sass",

    "compile:sass": "node-sass sass/main.scss css/style.css -w",
    "concat:css": "concat -o css/style.concat.css css/style.css css/fontawesome/css/all.min.css",
    "compress:css": "node-sass css/style.concat.css css/style.css --output-style compressed",
    "build": "npm-run-all compile:sass concat:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alidm96/sim-card-website.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alidm96/sim-card-website/issues"
  },
  "homepage": "https://github.com/alidm96/sim-card-website#readme",
  "dependencies": {
    "node-sass": "^7.0.0"
  },
  "devDependencies": {
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5"
  }
}
